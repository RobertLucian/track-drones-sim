{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
           "jsx": true,
           "modules": true,
           "experimentalObjectRestSpread": true
        }
      },
      "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jquery": true,
        "mocha": true
      },
      "rules": {
        "no-console": 0,
        "no-constant-condition": 0,
        "no-await-in-loop": 0,
        "linebreak-style": 0
      }
}